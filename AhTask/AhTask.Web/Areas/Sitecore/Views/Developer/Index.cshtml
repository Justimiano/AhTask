
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutSitecore.cshtml";
}
<div class="jumbotron">
    <span class="well-sm label label-danger"><b>Sitecore</b></span><span class="well-sm label label-info"><b>Development</b></span>
    <h2 class="text-uppercase"><strong>Sitecore Developer</strong></h2>
    <p>Becomes a back-end Sitecore Developer.</p>
</div>

<ol class="breadcrumb">
    <li>@Html.ActionLink("Tech", "Index", "Tech", new { area = "" }, null)</li>
    <li>@Html.ActionLink("Sitecore", "Sitecore", "Tech", new { area = "" }, null)</li>
    <li class="active">Developer</li>
</ol>


<div class="page-header">
    <h2>Course Description</h2>
    <p>
        Learn how to developer for  Sitecore by reviewing the basic concepts of Sitecore architecture. Try out this introductory course that was created with Sitecore Rocks.
    </p>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Course Overview</h3>
    </div>
    <div class="panel-body">
        <div class="media">
            <div class="media-left">
                <a href="@Url.Action("SitecoreRocks", "Developer", new { Area="Sitecore"})">
                    <img class="media-object" src="~/App_Themes/Images/Icones/Sitecore/sitecoreInstallation.png" alt="...">
                </a>
            </div>
            <div class="media-body">
                <a href="@Url.Action("SitecoreRocks", "Developer", new { Area = "Sitecore" })">
                    <h4 class="media-heading"><b>Sitecore Rocks</b></h4>
                </a>
                <p>
                    Learn how to set up and connect the Sitecore Rocks with Sitecore Instance.
                </p>
                <p>
                    <a href="@Url.Action("SitecoreRocks", "Developer", new { Area = "Sitecore" })" class="btn btn-info">
                        <span class="glyphicon glyphicon-play-circle"></span> Watch Videos
                    </a>
                </p>
            </div>
        </div>       

        <div class="media">
            <div class="media-left">
                <a href="@Url.Action("Presentation", "Developer", new { Area = "Sitecore" })">
                    <img class="media-object" src="~/App_Themes/Images/Icones/Sitecore/SitecoreTemplate.png" alt="...">
                </a>
            </div>
            <div class="media-body">
                <a href="@Url.Action("Presentation", "Developer", new { Area = "Sitecore" })">
                    <h4 class="media-heading"><b>Presentation</b></h4>
                </a>
                <p>
                    Learn how to create layout and define the presentation details for it.
                </p>
                <p>
                    <a href="@Url.Action("Presentation", "Developer", new { Area = "Sitecore" })" class="btn btn-info">
                        <span class="glyphicon glyphicon-play-circle"></span> Watch Videos
                    </a>
                </p>
            </div>
        </div>
        <div class="media">
            <div class="media-left">
                <a href="@Url.Action("Components", "Developer", new { Area = "Sitecore" })">
                    <img class="media-object" src="~/App_Themes/Images/Icones/Sitecore/SitecoreTemplate.png" alt="...">
                </a>
            </div>
            <div class="media-body">
                <a href="@Url.Action("Components", "Developer", new { Area = "Sitecore" })">
                    <h4 class="media-heading"><b>Components</b></h4>
                </a>
                <p>
                    Learn how to create Sitecore componentes.
                </p>
                <p>
                    <a href="@Url.Action("Components", "Developer", new { Area = "Sitecore" })" class="btn btn-info">
                        <span class="glyphicon glyphicon-play-circle"></span> Watch Videos
                    </a>
                </p>
            </div>
        </div>

    </div>
</div>

